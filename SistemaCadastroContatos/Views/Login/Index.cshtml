@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]

    </div>
}

<h1>Minha tela de login</h1>

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login" aria-describedby="emailHelp" placeholder="Enter email">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Password">
        @Html.ValidationMessageFor(x => x.Senha)

    </div>

    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>
