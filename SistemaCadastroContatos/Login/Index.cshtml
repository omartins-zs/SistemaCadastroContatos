@{
    Layout = "_LayouDeslogado";
    ViewData["Title"] = "Login";
}

<h1>Minha tela de login</h1>


<form>
    <div class="form-group">
        <label for="exampleInputEmail1">Login</label>
        <input type="text" class="form-control" id="login" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" class="form-control" id="senha" placeholder="Password">
    </div>

    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>
